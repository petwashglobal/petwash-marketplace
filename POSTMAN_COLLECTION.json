    {
      "name": "2. Paw Finder™ - Lost & Found Pets",
      "item": [
        {
          "name": "POST /api/paw-finder/reports - Create Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"lost\",\n  \"pet\": {\n    \"species\": \"dog\",\n    \"name\": \"Kenzo\",\n    \"color\": \"white\",\n    \"breed\": \"Golden Retriever\"\n  },\n  \"lastSeen\": {\n    \"city\": \"Tel Aviv\",\n    \"coords\": [34.78, 32.08],\n    \"address\": \"Rothschild Blvd\"\n  },\n  \"contact\": {\n    \"name\": \"Nir\",\n    \"phone\": \"+972549833355\",\n    \"email\": \"nir@example.com\"\n  },\n  \"reward\": \"500 ILS\",\n  \"lang\": \"he\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "reports"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has id', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.collectionVariables.set('reportId', jsonData.id);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/paw-finder/reports - List Active",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/reports?status=active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "reports"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has reports array', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.reports).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/paw-finder/reports/:id - Get Specific",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/reports/{{reportId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "reports", "{{reportId}}"]
            }
          }
        },
        {
          "name": "PATCH /api/paw-finder/reports/:id/resolve",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resolved\": true,\n  \"note\": \"Pet reunited with owner!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/reports/{{reportId}}/resolve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "reports", "{{reportId}}", "resolve"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Status is resolved', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('resolved');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/paw-finder/stats - Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "stats"]
            }
          }
        }
      ]
    },
