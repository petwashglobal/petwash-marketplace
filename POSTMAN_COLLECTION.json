    {
      "name": "4. Rate Limiting Tests",
      "item": [
        {
          "name": "POST Report - Should Rate Limit (10x)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"lost\",\n  \"pet\": {\"species\": \"cat\", \"name\": \"Test\"},\n  \"lastSeen\": {\"city\": \"Test\"},\n  \"contact\": {\"name\": \"Test\", \"phone\": \"+972500000000\"},\n  \"lang\": \"en\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/paw-finder/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "paw-finder", "reports"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// After 100 requests in 15min, should get 429",
                  "pm.test('Status code is 201 or 429', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([201, 429]);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
